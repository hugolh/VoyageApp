<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/voyageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="8dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/voyageDate"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/voyageTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/voyageDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/voyageDate"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/buttonViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/expand"
        android:layout_marginRight="8dp" />

    <ImageButton
        android:id="@+id/bDeleteTravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/buttonViewDetails"
        android:src="@drawable/delete"
        android:layout_marginRight="8dp" />

    <ImageButton
        android:id="@+id/bUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/bDeleteTravel"
        android:src="@drawable/edit"
        android:layout_marginRight="8dp" />

</RelativeLayout>
